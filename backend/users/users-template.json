{
  "index_patterns": [
    "users-*"
  ],
  "template": {
    "aliases": {
      "users": {}
    },
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "analysis": {
        "analyzer": {
          "standard": {
            "type": "standard"
          }
        }
      },
      "index.knn": true
    },
    "mappings": {
      "properties": {
        "firstName": {
          "type": "text",
          "analyzer": "standard"
        },
        "lastName": {
          "type": "text",
          "analyzer": "standard"
        },
        "email": {
          "type": "keyword"
        },
        "jobTitle": {
          "type": "text",
          "analyzer": "standard"
        },
        "department": {
          "type": "keyword"
        },
        "managerId": {
          "type": "keyword"
        },
        "employeeId": {
          "type": "keyword"
        },
        "hireDate": {
          "type": "date"
        },
        "isActive": {
          "type": "boolean"
        },
        "phone": {
          "type": "keyword"
        },
        "location": {
          "type": "text",
          "analyzer": "standard"
        },
        "createdAt": {
          "type": "date"
        },
        "updatedAt": {
          "type": "date"
        },
        "fullName": {
          "type": "text",
          "analyzer": "standard"
        },
        "embedding": {
          "type": "knn_vector",
          "dimension": 384,
          "method": {
            "name": "hnsw",
            "space_type": "cosinesimil",
            "engine": "nmslib",
            "parameters": {
              "ef_construction": 128,
              "m": 16
            }
          }
        }
      }
    }
  }
}
