{
  "index_patterns": [
    "posts-*"
  ],
  "template": {
    "aliases": {
      "posts": {}
    },
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "analysis": {
        "analyzer": {
          "standard": {
            "type": "standard"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "title": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "standard"
        },
        "uselessField": {
          "type": "text",
          "analyzer": "standard"
        },
        "createdAt": {
          "type": "date"
        }
      }
    }
  }
}