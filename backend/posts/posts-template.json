{
  "index_patterns": [
    "posts-*"
  ],
  "template": {
    "aliases": {
      "posts": {}
    },
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "analysis": {
        "analyzer": {
          "standard": {
            "type": "standard"
          }
        }
      },
      "index.knn": true,
      "default_pipeline": "posts-ingest-pipeline"
    },
    "mappings": {
      "properties": {
        "title": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "standard"
        },
        "content": {
          "type": "text",
          "analyzer": "standard"
        },
        "embeddings": {
          "type": "nested",
          "properties": {
            "knn": {
              "type": "knn_vector",
              "dimension": 384
            }
          }
        },
        "createdAt": {
          "type": "date"
        }
      }
    }
  }
}
